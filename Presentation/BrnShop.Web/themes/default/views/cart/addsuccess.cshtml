@model BrnShop.Web.Models.CartAddSuccessModel
@{
    Layout = null;
}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>成功添加到购物车-@{@WorkContext.ShopConfig.SiteTitle}</title>
    @Html.Raw(WorkContext.ShopConfig.SEOKeyword)
    @Html.Raw(WorkContext.ShopConfig.SEODescription)
    <link href="@{@WorkContext.CSSCDN}/themes/default/css/base.css" rel="stylesheet" type="text/css" />
    <link href="@{@WorkContext.CSSCDN}/themes/default/css/content.css" rel="stylesheet" type="text/css" />
    <script src="@{@WorkContext.ScriptCDN}/scripts/jquery.js" type="text/javascript"></script>
    <script src="@{@WorkContext.ScriptCDN}/scripts/common.js" type="text/javascript"></script>
    <script type="text/javascript">
        uid = @WorkContext.Uid;
        isGuestSC = @WorkContext.ShopConfig.IsGuestSC;
        scSubmitType = @WorkContext.ShopConfig.SCSubmitType;
    </script>
</head>

<body>
@Html.Partial("_header")


<div class="buyTip box">
<div class="buyTipInner">
<img src="@{@WorkContext.ImageCDN}/themes/default/images/ok.gif" width="43" height="48" /> 
@if (Model.ItemType == 0)
{
@:商品成功添加到购物车！
}
else if (Model.ItemType == 1)
{ 
@:套装成功添加到购物车！
}
@if (Model.ItemType == 0)
{
<a href="@Url.Action("product", "catalog", new RouteValueDictionary { { "pid", Model.ItemId } })" class="grayBT">继续购物</a>
}
else if (Model.ItemType == 1)
{ 
<a href="@Url.Action("suit", "catalog", new RouteValueDictionary { { "pmId", Model.ItemId } })" class="grayBT">继续购物</a>
}
<a href="@Url.Action("index", "cart", new RouteValueDictionary { { "pmId", Model.ItemId } })" class="redBT">去购物车结算&gt;</a>
</div>
</div>



@Html.Partial("_footer")
</body>
</html>
